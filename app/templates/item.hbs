<h2>{{model.name}}</h2>
<p>Price: ${{model.price}}</p>
<p>Description: {{model.description}}</p>
<p>{{sold-out model}}</p>
<p>Quantity: {{model.quantity}}</p>
<img class="item-page" src={{model.image}}>
<br><br>

<button {{action 'addToCart' model}} class="btn btn-success">Add To Cart</button>

{{display-cart checkout='checkout' removeItem="removeItem"}}
